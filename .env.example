# ===========================================
# QR Track - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# Database (Vercel Postgres - Required)
# ===========================================
# Get these from Vercel Dashboard > Storage > Your Database > .env.local

# Main connection URL (used by @vercel/postgres)
# This should be the pooled connection string for serverless environments
POSTGRES_URL="postgres://user:password@host:5432/database"

# Pooled connection string for Prisma (includes pgbouncer params)
# Use this if you're using Prisma in addition to @vercel/postgres
POSTGRES_PRISMA_URL="postgres://user:password@host:5432/database?pgbouncer=true&connect_timeout=15"

# Non-SSL connection string (for local development)
POSTGRES_URL_NO_SSL="postgres://user:password@host:5432/database"

# Direct connection string (bypasses connection pooler)
# Use for migrations and one-time operations
POSTGRES_URL_NON_POOLING="postgres://user:password@host:5432/database"

# Individual connection parameters (used internally by Vercel)
POSTGRES_USER="user"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# ===========================================
# Application Settings (Required)
# ===========================================

# Base URL for your application
# Development: http://localhost:3000
# Production: https://your-app.vercel.app (or custom domain)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ===========================================
# Optional Settings
# ===========================================

# IP Geolocation API Key (if not using Vercel's built-in headers)
# Only needed if deploying outside of Vercel
# IP_API_KEY=""

# Node environment (automatically set by Vercel/Next.js)
# NODE_ENV="development"
